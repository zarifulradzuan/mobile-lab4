<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acitivity_exp_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bitp3453.mydailyexpenses.ActivityExpList">

    <TextView
        android:id="@+id/totalExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="TextView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyListExp"
        android:layout_width="wrap_content"
        android:layout_height="672dp"
        android:layout_below="@+id/totalExp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        tools:listitem="@layout/list_expenses_recycler" />
</RelativeLayout>
